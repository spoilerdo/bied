{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "rootDirs": ["src", "test"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node"]
  },
  "include": ["src/**/*", "node_modules/typescript/lib/lib.es5.d.ts"],
  "exclude": ["node_modules", "dist"]
}
